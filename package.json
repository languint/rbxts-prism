{
	"name": "prism",
	"private": true,
	"packageManager": "pnpm@9.15.1",
	"workspaces": [
		"packages/*",
		"docs",
		"test"
	],
	"scripts": {
		"packages:build": "pnpm --filter \"./packages/**\" build",
		"core:build": "pnpm --filter @rbxts/prism build",
		"core:dev": "pnpm --filter @rbxts/prism dev",
		"kit:build": "pnpm --filter @rbxts/prism-kit build",
		"kit:dev": "pnpm --filter @rbxts/prism-kit dev",
		"test:build": "pnpm --filter test build",
		"test:dev": "pnpm --filter test dev",
		"serve": "rojo serve"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.0",
		"lefthook": "^1.10.0"
	}
}
